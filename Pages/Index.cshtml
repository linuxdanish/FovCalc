@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">A Simple FOV Calculator</h1>
    <p>This is a basic calculator that will calculate the effective area of view (width x height)
        projected on to the designated camera sensor as given by a specific lens combination.
    </p>
    <form method="post">
        <div>
            <select asp-for="camera" asp-items="Model.cameraOptions"></select>
            <label asp-for="fL">Focal Length:</label>
            <input asp-for="fL"/>
            <label asp-for="dist">Distance to focal plane:</label>
            <input asp-for="dist"/>
            <label asp-for="anamorphic">Anamorphic:</label>
            <input asp-for="anamorphic">
            <input type="submit"/>
        </div>
    </form>
    @if (Model.linearFovW != 0)
    {
        <p>The computed angle of view is: @Model.AoV</p>
        <p>The computed linear field of view width is:  @Model.linearFovW</p>
        <p>The frame width using a 2x anamorphic lense is: @Model.anamorphFov</p>
    }
</div>
